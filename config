exec_always ~/.i3/bin/configure-xrandr.sh
exec_always --no-startup-id feh --bg-fill ~/.i3/conf/wallpapers.jpg
exec --no-startup-id numlockx on
exec --no-startup-id compton
exec --no-startup-id dunst -config ~/.i3/conf/dunst
exec --no-startup-id nm-applet
exec --no-startup-id thunar --daemon
exec --no-startup-id guake
exec --no-startup-id xset dpms 300
exec --no-startup-id xss-lock -- ~/.i3/bin/i3exit lock


bindsym Control+$alt+r restart

bindsym Control+$alt+l exec ~/.i3/bin/i3exit lock

bindsym $mod+Return exec xfce4-terminal --hide-menubar

bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $alt+space exec --no-startup-id i3-dmenu-desktop

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
