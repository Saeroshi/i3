bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id  xbacklight -dec 5

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

set $mode_system Exit Shift+ (p) Éteindre, (r) reboot, (l) lock, (e) logout, (s) suspend, (h) hibernate
mode "$mode_system" {
    bindsym Shift+p exec --no-startup-id ~/.i3/bin/i3exit shutdown, mode "default"
    bindsym Shift+r exec --no-startup-id ~/.i3/bin/i3exit reboot, mode "default"
    bindsym Shift+l exec --no-startup-id ~/.i3/bin/i3exit lock, mode "default"
    bindsym Shift+e exec --no-startup-id ~/.i3/bin/i3exit logout, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.i3/bin/i3exit suspend, mode "default"
    bindsym Shift+h exec --no-startup-id ~/.i3/bin/i3exit hibernate, mode "default"

    # Retour à la normal : échap ou entré
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym XF86PowerOff mode "$mode_system"
bindsym Control+$alt+Delete mode "$mode_system"

bindsym $alt+F4 kill

hide_edge_borders both
binding_mode_indicator yes
