set $alt Mod1

font pango:Cantarell Regular 8

floating_modifier $mod

bar {
    #status_command i3blocks -c ~/.i3/i3blocks.conf
    status_command i3pystatus -c ~/.i3/i3pystatus.py
    position          top
    workspace_buttons yes
    colors {
